<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">
  <changeSet id="creatingProjectTables" author="developer">
    <createTable tableName="site">
      <column name="id" type="BIGINT" autoIncrement="true">
        <constraints primaryKey="true" nullable="false"/>
      </column>
      <column name="status" type="ENUM('INDEXING', 'INDEXED', 'FAILED')">
        <constraints nullable="false"/>
      </column>
      <column name="status_time" type="timestamp">
        <constraints nullable="false"/>
      </column>
      <column name="last_error" type="TEXT">
      </column>
      <column name="url" type="VARCHAR(255)">
        <constraints nullable="false"/>
      </column>
      <column name="name" type="VARCHAR(255)">
        <constraints nullable="false"/>
      </column>
    </createTable>
    <createTable tableName="page">
      <column name="id" type="BIGINT" autoIncrement="true">
        <constraints primaryKey="true" nullable="false"/>
      </column>
      <column name="site_id" type="BIGINT">
        <constraints nullable="false"/>
      </column>
      <column name="path" type="TEXT">
        <constraints nullable="false"/>
      </column>
      <column name="code" type="INT">
        <constraints nullable="false"/>
      </column>
      <column name="content" type="MEDIUMTEXT">
        <constraints nullable="false"/>
      </column>
    </createTable>
    <createTable tableName="lemma">
      <column name="id" type="BIGINT" autoIncrement="true">
        <constraints primaryKey="true" nullable="false"/>
      </column>
      <column name="site_id" type="BIGINT">
        <constraints nullable="false"/>
      </column>
      <column name="lemma" type="VARCHAR(255)">
        <constraints nullable="false"/>
      </column>
      <column name="frequency" type="INT">
        <constraints nullable="false"/>
      </column>
    </createTable>

    <createTable tableName="indexing">
      <column name="id" type="BIGINT" autoIncrement="true">
        <constraints primaryKey="true" nullable="false"/>
      </column>
      <column name="rating" type="FLOAT">
        <constraints nullable="false"/>
      </column>
      <column name="lemma_id" type="BIGINT">
        <constraints nullable="false"/>
      </column>
      <column name="page_id" type="BIGINT">
        <constraints nullable="false"/>
      </column>
    </createTable>

    <!-- Внешний ключ к site -->
    <addForeignKeyConstraint
      baseTableName="page"
      baseColumnNames="site_id"
      constraintName="fk_page_site"
      referencedTableName="site"
      referencedColumnNames="id"
      onDelete="CASCADE"/>

    <!-- Внешний ключ к site -->
    <addForeignKeyConstraint
      baseTableName="lemma"
      baseColumnNames="site_id"
      constraintName="fk_lemma_site"
      referencedTableName="site"
      referencedColumnNames="id"
      onDelete="CASCADE"/>

    <!-- Внешний ключ к lemma_entity -->
    <addForeignKeyConstraint
      constraintName="fk_index_entity_lemma"
      baseTableName="indexing"
      baseColumnNames="lemma_id"
      referencedTableName="lemma"
      referencedColumnNames="id"
      onDelete="CASCADE"
      onUpdate="NO ACTION"/>

    <!-- Внешний ключ к page_entity -->
    <addForeignKeyConstraint
      constraintName="fk_index_entity_page"
      baseTableName="indexing"
      baseColumnNames="page_id"
      referencedTableName="page"
      referencedColumnNames="id"
      onDelete="CASCADE"
      onUpdate="NO ACTION"/>
    <!--    <createIndex tableName="page" indexName="idx_path" unique="true">-->
    <!--      <column name="path"/>-->
    <!--    </createIndex>-->
  </changeSet>
</databaseChangeLog>